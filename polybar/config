include-file = ~/.theme/polybar

[settings]
pseudo-transparency = true

[bar/top]
width = 100%
height = 34
offset-x = 0
offset-y = -1
;bottom = true

fixed-center = true

background = ${colors.bg}
foreground = ${colors.fg}

underline-size = 3
underline-color = ${colors.underline}

spacing = 0
padding = 0
module-margin = 0

;Baloo, Miso:style=regular
font-0 = Miso:style=regular:size=24:antialias=true;5
font-1 = FontAwesome:size=24;5
font-2 = Wuncon Siji:size=18;3
font-3 = unifont:fontformat=truetype:size=20;3


modules-left = bspwm
modules-center = xwindow
modules-right = filesystem  cpu  memory  temperature  wlan  eth  date

; Unused modules
; i3 xbacklight volume battery

wm-restack = i3

[module/cpu]
type = internal/cpu
; Seconds to sleep between updates
; Default: 1
interval = 0.5
label = cpu %percentage%%

[module/memory]
type = internal/memory
; Seconds to sleep between updates
; Default: 1
interval = 3
label = mem %percentage_used%%

[module/xwindow]
type = internal/xwindow
label = %title:0:60:...%
label-padding = 4

[module/temperature]
type = internal/temperature
interval = 0.5
thermal-zone = 0
hwmon-path = /sys/devices/pci0000:00/0000:00:03.1/0000:0a:00.0/0000:0b:00.0/0000:0c:00.0/hwmon/hwmon5/temp2_input
base-temperature = 20
warn-temperature = 60
label = gpu %temperature-c%

[module/filesystem]
type = internal/fs
interval = 25

mount-0 = /
label-mounted = %mountpoint% %percentage_used%%
label-mounted-padding = 5
label-unmounted = %mountpoint%  ?
label-unmounted-padding = 5
label-mounted-background = ${colors.module-b-bg}
label-unmounted-background = ${colors.module-b-bg}

[module/bspwm]
type = internal/bspwm
pin-workspaces = true
inline-mode = false
enable-click = true
enable-scroll = false
reverse-scroll = false
fuzzy-match = true

; ws-icon-[0-9]+ = label;icon
; Note that the label needs to correspond with the bspwm workspace name
ws-icon-0 = 1;♚
ws-icon-1 = 2;♛
ws-icon-2 = 3;♜
ws-icon-3 = 4;♝
ws-icon-4 = 5;♞
ws-icon-default = ♟

format = <label-state> <label-mode>

label-monitor = %name%
label-monitor-padding = 5
label-monitor-foreground = ${colors.workspace-mode-fg}
label-monitor-background = ${colors.workspace-mode-bg}

; If any values for label-dimmed-N are defined, the workspace/mode
; colors will get overridden with those values if the monitor is out of focus
; To only override workspaces in a specific state, use:
;   label-dimmed-focused
;   label-dimmed-occupied
;   label-dimmed-urgent
;   label-dimmed-empty
label-dimmed-foreground = #555
label-dimmed-underline = ${bar/top.background}
label-dimmed-focused-background = #f00
label-dimmed-padding = 5

label-focused = %name%
label-focused-background = ${colors.workspace-f-bg}
label-focused-underline= ${colors.workspace-f-underline}
label-focused-padding = 5

label-occupied = %name%
label-occupied-foreground = ${colors.workspace-uf-fg}
label-occupied-padding = 5

label-urgent = %name%
label-urgent-padding = 5

label-empty = %name%
label-empty-foreground = #55
label-empty-padding = 5

; Separator in between workspaces
label-separator =
label-separator-padding = 0
label-separator-foreground = #ffb52a

[module/i3]
type = internal/i3
format = <label-state> <label-mode>
index-sort = true
wrapping-scroll = false
; pin-workspaces = true
; strip-wsnumbers = true
; enable-click = true
; enable-scroll = false
; reverse-scroll = false

ws-icon-0 = 1;
ws-icon-1 = 2;
ws-icon-2 = 3;
ws-icon-3 = 4;
ws-icon-4 = 5;
