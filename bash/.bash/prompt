source $HOME/.bash/prompt-vars
source $HOME/.bash/prompt-git

#### provides:
# Date DateCustom Time12h Time12a PathShort PathFull NewLine User
# Host LongHost LineNumber HistoryNumber PromptChar
# Color_Off Black Red Green Yellow Blue Purple Cyan White
# BBlack UBlack IBlack BIBlack On_Black IOn_Black

# Set host specific coloring
HostColor=$Red
case $HOSTNAME in
		(Amethyst) HostColor=$Purple;;
		(Sweetie) HostColor=$Green;;
		(owl) HostColor=$Yellow;;
		(kibble) HostColor=$Blue;;
		(ariel) HostColor=$Purple;;
esac

## GIT prompt values
export GIT_PS1_SHOWDIRTYSTATE=true
export GIT_PS1_SHOWUNTRACKEDFILES=true
export GIT_PS1_SHOWCOLORHINTS=true
export GIT_PS1_DESCRIBE_STYLE='contains'
export GIT_PS1_SHOWUPSTREAM='auto'
# Find out more at http://blog.backslasher.net/git-prompt-variables.html
# * unstaged changes
# + staged changes
# % untracked changes
# < behind upstream
# > ahead of upstream
# <> diverged from upstream
# = identical

#### PROMPTS. uncomment one
# amy > Amethyst > ~ $
#PS1="$Cyan$User > $HostColor$Host > $Cyan$PathShort $PromptChar$Color_Off "
# amy Amethyst:~ (gitbranch)
#PS1="$Cyan$User $HostColor$Host$White:$HostColor$PathShort$Cyan$(__git_ps1) $Color_Off"
# amy Amethyst:~
PS1="$Cyan$User $HostColor$Host$White:$HostColor$PathShort $Color_Off"
