#!/bin/bash

# Rewrites
alias t="tmux attach"
alias grep="grep -i"

alias df="df -h"
alias du="du -hc"
alias ping="ping -c 5"
alias vi="vim"

alias ..="cd .."
alias ...="cd ../.."
alias ....="cd ../../.."
alias .....="cd ../../../.."
alias -- -="cd -"

alias ls="ls --color"
alias sl="ls"
alias ll="ls -lah"
alias lsd="ls -la | grep '^d'"

alias feh="feh -FZ"

## My commands
alias aliases="vim ~/.alias"
alias musb="sudo mount /dev/sda1 /mnt/usb"
alias uusb="sudo umount /dev/sda1"
alias clean="find . -regex '.*\(.AppleDouble\|.DS_Store\)$' -ls -exec rm -r {} \;"
alias sweetie="djmount $HOME/sweetie"


# Capture XORG keys
alias xkeycap="xev | grep -A2 --line-buffered '^KeyRelease' | sed -n '/keycode /s/^.*keycode \([0-9]*\).* (.*, \(.*\)).*$/\1 \2/p'"

# Sound cards
alias soundcards="aplay -l | awk -F \: '/,/{print $2}' | awk '{print $1}' | uniq"
alias sounddevices="aplay -L | grep :CARD"

# Place scrot files in specified directory
alias scrot="scrot ~/screenshots/%Y-%m-%d_%H%M%S.png"

# Menu
alias menu="dmenu_run -i -nb $DMENU_NB -nf $DMENU_NF -sb $DMENU_SB -sf $DMENU_SF -fn \"$DMENU_FONT\""

# Git shortcuts
alias g="git"
alias gs="git r1 -n 1; git branch | grep \*; git status --short"
alias gl="git log --decorate --oneline --graph --date-order --all"
alias ga="git add"
alias gp="git push"
alias gpa="gp --all"
alias gu="git pull"
alias gd="git diff"
alias gdc="gd --cached"
alias gm="git commit -m"
alias gma="git commit -am"
alias gb="git branch"
alias gba="git branch -a"
alias gcb="gc -b"
alias gf="git fetch"

# Enable aliases to be sudoâ€™ed
alias sudo="sudo "

# List 10 biggest files in pwd.
alias bf="du -x | sort -nr | head -10"

# List monospace fonts available
alias listmonofonts="fc-list :spacing=100 family style | sort -n"
alias updateFontCache="fc-cache -f -v"

# Memory status
alias meminfo="echo -e '/proc/meminfo:\n';grep --color=auto '^[Mem|Swap]*[Free|Total]*:' /proc/meminfo && echo -e '\nfree -m:'; free -m"

# Remove ._ files
alias removeDot_="find . -iname '._*' -exec rm -rf {} \;"