docker run -d \
		-v /mnt/mixed:/media/mixed \
		-v /mnt/tv:/media/tv \
		-v /mnt/movies:/media/movies \
		-v /mnt/extra_a:/media/extra_a \
		-v /mnt/extra_b:/media/extra_b  \
		-e AVAHI=1 --net "host" \
		--name="afp" \
		-e AFP_USER="$(cat ~/afp_user.txt)" \
		-e AFP_PASSWORD=$(cat ~/afp_password.txt) \
		leafybear/afp
