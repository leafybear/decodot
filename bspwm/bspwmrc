#! /bin/sh

#if [ -e "$BSPWM_STATE" ] ; then
#	bspc wm -l "$BSPWM_STATE"
#	rm "$BSPWM_STATE"
#fi

sxhkd &

# colors in separate file
source $HOME/.theme/bspwm

# workspaces
bspc monitor -d 1 2 3 4 5 6 7 8 9

# visual options
bspc config border_width    1
bspc config window_gap      10
bspc config top_padding		35
bspc config right_padding	0
bspc config left_padding	0
bspc config bottom_padding	0

bspc config split_ratio         0.5
bspc config borderless_monocle  true
bspc config gapless_monocle     true
bspc config focus_by_distance   true
bspc config focus_follows_pointer	true

bspc config super mod4

# app rules
bspc rule -a feh fullscreen=on
bspc rule -a mpv floating=on
bspc rule -a Kupfer.py focus=on
bspc rule -a Screenkey manage=off
bspc rule -a surf desktop=^2
bspc rule -a Chromium desktop=^2
bspc rule -a Firefox desktop=^2
bspc rule -a crx_nckgahadagoaajjgafhacjanaoiihapd desktop=^3 floating=on #hangouts
bspc rule -a Gimp desktop=^4 follow=on floating=on
bspc rule -a Kodi desktop=^4

# "use tabs consistently" external rules
bspc config external_rules_command "$(which external_rules)"

# start up apps
$HOME/.config/polybar/launch.sh &