##-------------- Launch apps

super + Return
	urxvt

super + space
	rofi -show run

##--------------- Nodes and Desktops

# Focus (Swap) a node
super + {_,shift + } {Left,Down,Up,Right}
  bspc node -{f,s} {west,south,north,east}

# Focus (move) a desktop
super + {_,shift + } {1-9}
	bspc {desktop -f,node -d} ^{1-9}

# Float, fullscreen (embiggen), or tile the window
super + {f,e,t}
	bspc node -t {floating,fullscreen,tiled}

# Cycle desktop layout
super + l
	bspc desktop -l next

# Move a node around
alt + ctrl + {Left,Down,Up,Right}
    bspc node -s {west,south,north,east}

# Close node
super + w
	bspc node -k

# Toggle monocle mode
super + m
	bspc desktop -l next

# Swap node in largest space
super + b
	bspc node -s biggest

# Select last node (desktop)
super + {grave,Tab}
	bspc {node,desktop} -f last

# Toggle sticky node
super + ctrl + period
  bspc node -g sticky

# Reload SXHKD config
super + Escape
	pkill -USR1 -x sxhkd

# Quit BSPWM normally
super + alt + Escape
	bspc quit

## -------------- Resizing nodes

# expand a window by moving one of its side outward
super + alt + {Left,Down,Up,Right}
	bspc node -z {left -20 0,bottom 0 20,top 0 -20,right 20 0}

# contract a window by moving one of its side inward
super + alt + shift + {Left,Down,Up,Right}
	bspc node -z {right -20 0,top 0 20,bottom 0 -20,left 20 0}

# move a floating window
super + ctl + {Left,Down,Up,Right}
	bspc node -v {-20 0,0 20,0 -20,20 0}


## -------------- Function keys

XF86Audio{RaiseVolume,LowerVolume}
	exec amixer -q set Master 5%{+,-} unmute

XF86AudioMute
	exec amixer -q set Master toggle

XF86Audio{Play,Next,Prev}
	exec mpc {toggle,next,prev}

XF86MonBrightness{Down,Up}
	exec xbacklight {-dec,-inc} 10

Print
	exec scrot ~/screenshots/%Y-%m-%d_%H%M%S.png