##-------------- Launch apps

super + Return
	kitty

super + space
	rofi -show combi -combi-modi drun,run -theme $HOME/.theme/rofi.rasi

alt + space
	rofi -modi "clipboard:greenclip print" -show clipboard -run-command '{cmd}' -theme $HOME/.theme/rofi.rasi

# super + alt + space
# 	rofi -modi "emoji:rofimoji" -show emoji -theme $HOME/.theme/rofi.rasi

##--------------- Nodes and Desktops
# Focus on workspace 3
super + n
	bspc desktop --focus ^3

# Focus the next/prev window on the desktop
super + {a,s}
	bspc node -f {prev.active,next.active}

# Focus (Swap) a node
super + {_,shift + } {Left,Down,Up,Right}
  bspc node -{f,s} {west,south,north,east}

# Focus (move node to) a desktop
super + {_,shift + } {1-9}
	bspc {desktop -f,node -d} ^{1-9}

# Move node to a monitor
ctrl + alt + {Left,Right}
	bspc node -d {next,prev} -f

# Float, fullscreen (embiggen), or tile the window
super + {f,e,t}
	bspc node -t {floating,fullscreen,tiled}

# Rotate (all) nodes
super + {_, shift +} q
	bspc node {@parent,@/} -R 90

# Swap to biggest on active desktop
super + b
	bspc node -s biggest.local --follow

# Cycle desktop layout
super + l
	bspc desktop -l next

# Close node
super + shift + w
	bspc node -k

# Close just the panel, not the app
super + w
	bspc node -c

# Toggle monocle mode
super + m
	bspc desktop -l next

# Select last node (desktop)
super + {grave,Tab}
	bspc {node,desktop} -f last

# Toggle sticky node
super + period
  bspc node -g sticky

# Reload SXHKD config
super + Escape
	pkill -USR1 -x sxhkd

# Quit BSPWM normally
super + alt + Escape
	bspc quit

## -------------- Resizing nodes

# expand a window by moving one of its side outward
super + ctrl + alt + {Left,Down,Up,Right}
	bspc node -z {left -20 0,bottom 0 20,top 0 -20,right 20 0}

# contract a window by moving one of its side inward
super + alt + shift + {Left,Down,Up,Right}
	bspc node -z {right -20 0,top 0 20,bottom 0 -20,left 20 0}

# adjust ratios
super + alt + {Left,Down,Up,Right}
	bspc node @parent -r {-0.1,+0.1,-0.1,+0.1}
# set ratio
# bspc node @parent -r 0.5
# adjust ratio
# bspc node @parent -r +0.1

## -------------- Function keys

XF86Audio{RaiseVolume,LowerVolume}
  exec pavolume {volup,voldown}
        # exec amixer -q set PCM 5%{+,-} unmute

XF86AudioMute
  exec pavolume mutetoggle
    # exec $DOTDIR/bin/dunst_volume_alt.sh mute

XF86Audio{Play,Next,Prev}
	exec mpc {toggle,next,prev}

XF86MonBrightness{Down,Up}
	exec xbacklight {-dec,-inc} 10

Print
	exec ~/.bin/screenshotter.sh
